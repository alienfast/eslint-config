{
  "name": "@alienfast/eslint-config",
  "description": "AlienFast's eslint config.",
  "version": "1.0.6",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alienfast/eslint-config.git"
  },
  "main": "index.js",
  "scripts": {
    "clean:yarn": "rm -rf ./packages/*/node_modules ./packages/*/yarn.lock yarn.lock node_modules",
    "clean": "yarn clean:yarn",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "lint:check": "yarn lint:print | eslint-config-prettier-check",
    "lint:print": "eslint --print-config src/index.ts",
    "prettier": "prettier --write \"{,**/}*.{ts,tsx,js,json,md}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,gql}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0"
  },
  "devDependencies": {
    "@alienfast/ci": "^7.0.5",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2"
  }
}

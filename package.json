{
  "name": "@alienfast/eslint-config",
  "description": "AlienFast's eslint config.",
  "packageManager": "yarn@3.2.0",
  "version": "3.0.23",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alienfast/eslint-config.git"
  },
  "main": "index.js",
  "scripts": {
    "clean:yarn": "rm -rf ./packages/*/node_modules ./packages/*/yarn.lock yarn.lock node_modules",
    "clean": "yarn clean:yarn",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "lint:check": "yarn lint:print | eslint-config-prettier-check",
    "lint:print": "eslint --print-config src/index.ts",
    "prettier": "prettier --write \"{,**/}*.{ts,tsx,js,json,md}\"",
    "test": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,gql}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx,js}": [
      "eslint . --cache --ext .js,.ts,.tsx --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-storybook": "^0.5.12",
    "eslint-plugin-unicorn": "^42.0.0",
    "eslint-plugin-unused-imports": "^2.0.0"
  },
  "devDependencies": {
    "@alienfast/ci": "^8.0.7",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "jest": "*",
    "prettier": "*"
  }
}
